extends layout

block content
    ul(id="navbar")
        if (user.hasOwnProperty("isAdmin"))
            if(user.isAdmin == true)
                li(class="floater")
                    a(href="/dashboardAdmin") Admin Data
        li(class="floater")     
            a(href="/logout") Log Out
    div(id="content")
        h2=`Hello, ${user.username}`
        h3 #{data}

        form(action="/dashboard/" + user._id, method="post")
            label(for="q1") What is you favourite food? 
            select(name="q1")
                option(selected=user.questions[0]["answer"])=user.questions[0]["answer"]
                option(value="pizza") Pizza
                option(value="hotdog") Hotdogs
                option(value="hamurger") Hamburgers
                option(value="other") Other
            br
            label(for="q2") Which mascot do you prefer? 
            select(name="q2")
                option(selected=user.questions[1]["answer"])=user.questions[1]["answer"]
                option(value="smokey") Smokey Bear
                option(value="woodsy") Woodsy Owl
                option(value="mcgruff") McGruff the Crime Dog
            br
            label(for="q3") How many languages do you know?
            select(name="q3")
                option(selected=user.questions[2]["answer"])=user.questions[2]["answer"]
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4+
            br
            input(type="submit", value="Update Answers")